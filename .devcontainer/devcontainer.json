{
    "name": "catkin-workspace",
    "dockerFile": "Dockerfile",
    "context": "..",
    "customizations": {
      "vscode": {
       "extensions": [
        "ms-vscode.cpptools",
        "ms-iot.vscode-ros",
          "ms-python.python",
          "ms-python.pylint"
       ]
      }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined",
        "-v",
        "${env:HOME}${env:USERPROFILE}/.ssh:/root/.ssh"
    ],
    "workspaceMount": "src=${localWorkspaceFolder},dst=/catkin_ws/src/,type=bind,consistency=cached",
    "workspaceFolder": "/catkin_ws",
    "postCreateCommand": "catkin_make"
}