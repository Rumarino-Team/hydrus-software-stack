    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },

        // ====== CV Publishers Debug Configurations ======
        {
            "name": "Debug CV Publishers (Development Profile)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5684
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/home/catkin_ws/src/hydrus-software-stack"
                }
            ],
            "preLaunchTask": "Set ROS Parameters (Debug CV)"
        },
        {
            "name": "Debug CV Publishers (Local)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/autonomy/src/cv_publishers.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/autonomy/src:${env:PYTHONPATH}",
                "ROS_PACKAGE_PATH": "${workspaceFolder}/autonomy:${env:ROS_PACKAGE_PATH}",
                "ROS_MASTER_URI": "http://localhost:11311"
            },
            "args": []
        },

        // ====== Development Profile Debugging ======
        {
            "name": "Debug in Development Container",
            "type": "debugpy",
